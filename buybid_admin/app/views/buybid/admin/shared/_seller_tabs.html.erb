<%= content_for :page_title do%>
    <%= link_to I18n.t('seller.title'), admin_sellers_path(@list_type) %> /
    <%= @list_type%> /
    <%= @seller.name%> /
<% end%>

<% content_for :sidebar do%>
    <ul class = "nav nav-pills nav-stacked" data-hook="admin_seller_tabs">
        <%= content_tag :li, class: ("active" if current == :details) do %>
            <%= link_to_with_icon 'edit', I18n.t('seller.details'), edit_admin_seller_path(@seller, @list_type)%>
        <% end%>
    </ul>

    <ul class = "nav nav-pills nav-stacked" data-hook="admin_seller_tabs">
        <%= content_tag :li, class: ('active' if current == :images) do %>
            <%= link_to_with_icon 'picture', I18n.t('seller.images'), admin_seller_images_path(@seller.id)%>
        <% end%>
    </ul>

    <ul class = "nav nav-pills nav-stacked" data-hook="admin_seller_tabs">
        <%= content_tag :li, class: ('active' if current == :rating_and_evals) do %>
            <%= link_to_with_icon 'th-large', I18n.t('seller.edit_rating_and_evals'), edit_rating_and_evals_admin_seller_path(@seller, @list_type)%>
        <% end%>
    </ul>

<% end%>
