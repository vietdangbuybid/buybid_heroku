<div class = "seller-contact-form">
    <div id = "first-half" class = 'col-xs-12 col-md-6'>
        <fieldset>
            <%= f.label :firstname, I18n.t('seller.contact.first_name') %>
            <%= f.text_field :firstname, class: 'form-control', value: contact.firstname %>
        </fieldset>

        <fieldset>
            <%= f.label :lastname, I18n.t('seller.contact.last_name') %>
            <%= f.text_field :lastname, class: 'form-control', value: contact.lastname %>
        </fieldset>

        <fieldset>
            <%= f.label :phone, I18n.t('seller.contact.phone') %>
            <%= f.text_field :phone, class: 'form-control', value: contact.phone %>
        </fieldset>

        <fieldset>
            <%= f.label :zipcode, I18n.t('seller.contact.zip_code') %>
            <%= f.text_field :zipcode, class: 'form-control', value: contact.zipcode %>
        </fieldset>
    </div>

    <div id = "second-half" class = 'col-xs-12 col-md-6'>
        <fieldset>
            <%= f.label :address1, I18n.t('seller.contact.address1') %>
            <%= f.text_field :address1, class: 'form-control', value: contact.address1 %>
        </fieldset>

        <fieldset>
            <%= f.label :address2, I18n.t('seller.contact.address2') %>
            <%= f.text_field :address2, class: 'form-control', value: contact.address2 %> </fieldset>

        <fieldset>
            <%= f.label :city, I18n.t('seller.contact.city') %>
            <%= f.text_field :city, class: 'form-control', value: contact.city %>
        </fieldset>

        <fieldset>
            <%= f.label :country, I18n.t('seller.contact.country') %>
            <%= f.text_field :country, class: 'form-control', value: contact.country %>
        </fieldset>
    </div>

</div>