<div data-hook="admin_image_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <div data-hook="file" class="form-group">
      <%= f.label :attachment, I18n.t('seller.image.file') %>
      <%= f.file_field :attachment %>
    </div>

    <div data-hook="file-name" class="form-group">
      <%= f.label :attachment_file_name, I18n.t('seller.image.filename') %>
      <%= f.text_field :attachment_file_name, class: "form-control title" %>
    </div>
  </div>

  <div data-hook="alt_text" class="col-xs-12 col-md-6">
    <div class="form-group">
      <%= f.label :description, I18n.t('seller.image.description') %>
      <%= f.text_area :description, rows: 4, class: 'form-control' %>
    </div>
  </div>
</div>
