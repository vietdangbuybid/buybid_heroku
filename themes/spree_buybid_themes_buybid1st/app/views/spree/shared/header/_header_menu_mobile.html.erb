                    <% end %>
                </li>
                <li>
                    <%= link_to "/support/estimate" do %>
                        <span class="menu-mobile-ico">
                            <i class="fa fa-calculator"></i>
                        </span>
                        Dự toán
                    <% end %>
                </li>
                <li>
                    <%= link_to "http://service.buybid.jp/" do %>
                        <span class="menu-mobile-ico">
                            <i class="fa fa-file-alt"></i>
                        </span>
                        Đặt hàng
                    <% end %>
                </li>
